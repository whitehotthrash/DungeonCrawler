Rem simple enemy entity

GLOBAL enemyId#

FUNCTION Init_Enemy_Object()
	
	LOAD OBJECT "assets\L-Thug-Idle.x", 3
	// APPEND OBJECT "assets\", 1, 25
	LOOP OBJECT 3 //, 0, 24
	YROTATE OBJECT 3, 180
	FIX OBJECT PIVOT 3
	//LOAD SOUND "assets\Earth slow.wav", 2
	SCALE OBJECT 3, 120, 120, 120
	POSITION OBJECT 3, 5, 0, 5
	SET OBJECT SPEED 3, 15
	enemyId# = 3
	
ENDFUNCTION